<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">

      <class>com.khiem.blog_ca_nhan.Entities.Account</class>
      <class>com.khiem.blog_ca_nhan.Entities.Category</class>
      <class>com.khiem.blog_ca_nhan.Entities.Comment</class>
      <class>com.khiem.blog_ca_nhan.Entities.Contact</class>
      <class>com.khiem.blog_ca_nhan.Entities.Introduce</class>
      <class>com.khiem.blog_ca_nhan.Entities.Link</class>
      <class>com.khiem.blog_ca_nhan.Entities.Post</class>
      <class>com.khiem.blog_ca_nhan.Entities.Tag</class>
      <properties>
          <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/blog_cn"/>
          <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
      </properties>
  </persistence-unit>
</persistence>
